@{
    Layout = "_AdminLayout";
}

@model SongsViewModel

<div class="container-md">
    <div class="row justify-content-center">
        <div class="col-md-8 mt-3">
            <ul class="list-group">
                <p class="lead text-center">Редактировать</p>
                @if (Model.Songs.Count > 0)
                {
                    @foreach (var song in Model.Songs)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Edit", "Admin", new { songId = song.SongId })" class="text-dark">@song.Title - @song.Artist.Title</a>
                            <form asp-action="Delete" asp-controller="Admin" asp-route-songId="@song.SongId" method="post" role="form">
                                <button type="submit" class="btn btn-danger fs-6">Удалить</button>
                            </form>
                        </li>
                    }
                }
                else
                {
                    <li>
                        <p class="text-dark">Список пуст</p>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>