@model RegisterViewModel

<div class="container-md">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-3">
            <p class="lead">Регистрация</p>
            <form asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label-sm"></label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label-sm"></label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="PasswordConfirm" class="form-label-sm"></label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Подтвердить</button>
                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Уже зарегистрированы?</a>
            </form>
        </div>
    </div>
</div>